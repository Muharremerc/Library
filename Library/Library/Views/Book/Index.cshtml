
@{
    if (Session["Library"] as DAL.Model.Library == null)
    {
        Response.Redirect("~/Login/Index");
        ViewBag.Title = "Index";
    }

}

<div class="row mt">
    <div class="col-lg-12">
        <h4>Add New Book</h4>
        <div class="form-panel">

            
                @using (Html.BeginForm("AddNewBook", "Book", FormMethod.Post, new { @class = "form-horizontal style-form", enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-1 control-label">Book Name</label>
                        <div class="col-sm-5">
                            <input class="form-control" name="bookName" id="bookName" type="text" placeholder="Book Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-1 control-label">Author Name</label>
                        <div class="col-sm-5">
                            <input class="form-control" name="authorName" id="authorName" type="text" placeholder="Author Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-1 control-label">Author Surname</label>
                        <div class="col-sm-5">
                            <input class="form-control" name="authorSurname" id="authorSurname" type="text" placeholder="Author Surname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-1 control-label">Floor</label>
                        <div class="col-sm-5">
                            <input class="form-control" name="floor" id="floor" type="text" placeholder="Floor">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-1 control-label">Block</label>
                        <div class="col-sm-5">
                            <input class="form-control" name="block" id="block" type="text" placeholder="Block">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-1">Image</label>
                        <div class="col-md-4">
                            <input id="image" name="image" type="file" class="default">
                        </div>
                    </div>
                    <button type="submit" name="Submit" id="Submit" class="btn btn-theme">Add</button>
                }

        </div>
        <!-- /form-panel -->
    </div>
    <!-- /col-lg-12 -->
</div>
